<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05BD50"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:fontFamily="@font/cambay_regular"
        android:text="Interbank"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="62dp"
        android:layout_height="63dp"
        app:layout_constraintEnd_toStartOf="@+id/txtTitulo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/log_interbank"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="47dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="260dp"
        android:layout_height="76dp"
        android:fontFamily="@font/cambay_regular"
        android:text="Todo lo que necesitas, en un solo App"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="127dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="-25dp"
        app:cardCornerRadius="35dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="40dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="DNI"
                    android:fontFamily=""
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/borde_redondo"
                    android:padding="15dp"
                    android:inputType="text"


                    android:id="@+id/seleccion_doc">

                </EditText>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="N° de documento"
                    android:textColor="#bababa"
                    android:background="@drawable/borde_redondo"
                    android:padding="15dp"
                    android:inputType="text"


                    android:id="@+id/dni_usuario">

                </EditText>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Contraseña"
                android:textColor="#bababa"
                android:background="@drawable/borde_redondo"
                android:padding="15dp"
                android:inputType="textPassword"


                android:id="@+id/pass_usuario"


                android:drawableEnd="@drawable/baseline_remove_red_eye_24">


            </EditText>


            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="Recordar documento"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#05BC50"
                android:fontFamily="@font/cambay_regular"
                android:padding="15dp"
                android:text="Ingresar"
                android:textSize="15dp"
                android:textStyle="bold"
                app:cornerRadius="5dp"

                android:id="@+id/btn_ingresar">

            </Button>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="100dp">


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
